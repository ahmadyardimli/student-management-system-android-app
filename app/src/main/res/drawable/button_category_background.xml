<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@color/sms_blue_pressed" />
                </shape>
            </item>
            <!-- Inner shape with a darker color -->
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <solid android:color="@color/sms_blue_darker" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Background shape -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@color/sms_blue" />
                </shape>
            </item>
            <!-- Inner shape with a darker color -->
            <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <solid android:color="@color/sms_blue_darker" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>


