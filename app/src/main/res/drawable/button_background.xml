<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="@color/sms_blue_pressed" />
                </shape>
            </item>
            <item android:bottom="11dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/sms_blue_pressed" />
                    <corners android:radius="45dp" />
                    <solid android:color="@color/sms_blue_darker" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="@color/sms_blue" />
                </shape>
            </item>
            <item android:bottom="7dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/sms_blue" />
                    <corners android:radius="45dp" />
                    <solid android:color="@color/sms_blue_darker" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>