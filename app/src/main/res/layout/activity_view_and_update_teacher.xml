<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.admin_activities.userandexamdetails.UserAndExamDetailsBaseActivity"
    android:layout_gravity="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/activity_view_and_update_teacher_container_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            >
            <include
                android:id="@+id/layout_view_and_update_user_item_username"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_password"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_email"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_user_status"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_creation_time"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_update_time"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_name"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_surname"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_subject"
                layout="@layout/layout_view_and_update_user_item" />

            <include
                android:id="@+id/layout_view_and_update_user_item_communication_status"
                layout="@layout/layout_view_and_update_user_item" />
        </LinearLayout>
    </ScrollView>


    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:fitsSystemWindows="true"/>
</androidx.drawerlayout.widget.DrawerLayout>



