<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    tools:context=".activities.admin_activities.userandexamdetails.UserAndExamDetailsActivity"
    >

    <!-- ScrollView to allow vertical scrolling of the content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"  >

        <!-- Main content ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/userAndExamDetailsConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activities.admin_activities.userandexamdetails.UserAndExamDetailsActivity">

            <!-- Top Guideline -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <!-- Bottom Guideline -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottomGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />

            <!-- Button: Foreign Languages -->
            <Button
                android:id="@+id/btnForeignLanguages"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Foreign Languages"
                app:layout_constraintTop_toTopOf="@id/topGuideline"
                app:layout_constraintBottom_toTopOf="@+id/btnSections"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Button: Section -->
            <Button
                android:id="@+id/btnSections"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sections"
                app:layout_constraintTop_toBottomOf="@+id/btnForeignLanguages"
                app:layout_constraintBottom_toTopOf="@+id/btnCategories"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Button: Categories -->
            <Button
                android:id="@+id/btnCategories"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Categories"
                app:layout_constraintTop_toBottomOf="@+id/btnSections"
                app:layout_constraintBottom_toTopOf="@+id/btnGroups"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Button: Groups -->
            <Button
                android:id="@+id/btnGroups"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Groups"
                app:layout_constraintTop_toBottomOf="@+id/btnCategories"
                app:layout_constraintBottom_toTopOf="@+id/btnSubGroups"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Button: SubGroups -->
            <Button
                android:id="@+id/btnSubGroups"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sub groups"
                app:layout_constraintTop_toBottomOf="@+id/btnGroups"
                app:layout_constraintBottom_toTopOf="@+id/btnUserTypes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Button: User Types -->
            <Button
                android:id="@+id/btnUserTypes"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="User types"
                app:layout_constraintTop_toBottomOf="@+id/btnSubGroups"
                app:layout_constraintBottom_toTopOf="@+id/btnStudentTypes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Button: Student Types -->
            <Button
                android:id="@+id/btnStudentTypes"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Students Types"
                app:layout_constraintTop_toBottomOf="@+id/btnUserTypes"
                app:layout_constraintBottom_toTopOf="@+id/btnSubjects"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Button: Subjects -->
            <Button
                android:id="@+id/btnSubjects"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Subjects"
                app:layout_constraintTop_toBottomOf="@+id/btnStudentTypes"
                app:layout_constraintBottom_toTopOf="@+id/btnClassNumbers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <!-- Button: Class Numbers -->
            <Button
                android:id="@+id/btnClassNumbers"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Class numbers"
                app:layout_constraintTop_toBottomOf="@+id/btnSubjects"
                app:layout_constraintBottom_toBottomOf="@+id/btnClassLetters"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                android:id="@+id/btnClassLetters"
                style="@style/CategoryButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Class letters"
                app:layout_constraintBottom_toTopOf="@+id/bottomGuideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnClassNumbers"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Navigation View (drawer) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"/>

</androidx.drawerlayout.widget.DrawerLayout>
