<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppButtonStyle" >
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:padding">22dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">35sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="layout_constraintWidth_max">800dp</item>
    </style>

    <style name="ErrorMessageTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/error_message</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
